<% layout('layouts/boilerplate') %> 


<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <div>
            <form action="http://localhost:3000/camps/<%=camp._id%>?_method=put  " method="post" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="name">Edit Campground Name</label>
                    <input class="form-control" type="text" name="campground[title]" id="name" value="<%= camp.title %> " required>
                    <div class="valid-feedback">
                        Look's Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="loc">Edit Campground Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="loc" value="<%= camp.location %> " required>
                    <div class="valid-feedback">
                        Look's Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Edit Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=camp.price %>" required>
                            <div class="valid-feedback">
                                Look's Good!
                            </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Edit Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="campground[description]" required><%= camp.description%></textarea>
                        <div class="valid-feedback">
                            Look's Good!
                        </div> 
                </div>
                <div class="mb-3">
                    <label class="form-label" for="img">Edit Campground Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="img" value="<%= camp.image %> " required>
                    <div class="valid-feedback">
                        Look's Good!
                    </div>
                </div>
                
                <div class="mb-3">
                    <button class="btn btn-danger">Update Campground</button>

                </div>
            </form>
        </div>
        <a class="btn btn-primary mb-2" href="/camps">Back to all Camps</a>
    </div>
</div>